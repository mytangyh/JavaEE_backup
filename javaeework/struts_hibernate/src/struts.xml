<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>
	<package name="default" extends="struts-default">
	<!--这里以后添加Action配置，后面配置的Action都要添加在这里-->
	<action name="login" class="org.action.LoginAction">
	<result name="success">/main.jsp</result>
	<result name="error">/login.jsp</result>
</action>
<action name="xsInfo" class="org.action.XsInfAction">
	<result name="success">/xsInf.jsp</result>
	<result name="error">/main.jsp</result>
</action>
<action name="updateXs" class="org.action.UpdateXsAction">
	<result name="success">/updateXs_success.jsp</result>
	<result name="error">/updateXsInfo.jsp</result>
</action>
	</package>
</struts>